{
  "name": "portfolio",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/amuroi777/portfolio.git",
  "author": "amuroi777 <muroiaki7722@gmail.com>",
  "license": "MIT",
  "scripts": {
    "static:server": "browser-sync start --server './' --files './'",
    "watch:server": "browser-sync start --proxy 'http://localhost:7676' --files './themes/portfolio'",
    "watch:scss": "sass themes/portfolio/src/scss:themes/portfolio/assets/css -s expanded --no-source-map -w",
    "watch:postcss": "postcss themes/portfolio/assets/css --no-map --dir themes/portfolio/assets/css -w",
    "task:compressedScss": "sass themes/portfolio/src/scss:assets/css -s compressed --no-source-map",
    "task:postcss": "postcss themes/portfolio/assets/css --no-map --dir themes/portfolio/assets/css",
    "task:stylelint": "stylelint --fix themes/portfolio/src/scss",
    "server": "browser-sync start --server './' --files './'",
    "dev": "run-p watch:{server,scss,postcss}",
    "build": "run-s task:{compressedScss,postcss}",
    "wp-env:start": "wp-env start",
    "wp-env:update": "wp-env start --update",
    "wp-env:stop": "wp-env stop",
    "wp-env:export": "wp-env run cli wp db export sql/import.sql",
    "wp-env:import": "wp-env run cli wp db import sql/import.sql",
    "wp-env:backup": "yarn run wp-env run cli wp ai1wm backup --exclude-spam-comments --exclude-post-revisions  --exclude-inactive-themes --exclude-muplugins  --exclude-inactive-plugins --exclude-cache",
    "wp-env:restore": "yarn run wp-env run cli wp ai1wm restore"
  },
  "devDependencies": {
    "@wordpress/env": "^5.9.0",
    "autoprefixer": "^10.4.13",
    "browser-sync": "^2.27.11",
    "node-css-mqpacker": "^9.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "sass": "^1.57.1",
    "stylelint": "^14.16.1",
    "stylelint-config-recess-order": "^3.1.0",
    "stylelint-config-standard-scss": "^6.1.0",
    "stylelint-scss": "^4.3.0"
  },
  "browserslist": [
    "last 2 versions",
    "not IE 11",
    "safari > 11, ios > 11"
  ]
}
